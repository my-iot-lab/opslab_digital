{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/net6/schemas/v3/furion-schema.json",

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "File": {
      "FileName": "logs/info.log",
      "Append": true,
      "MinimumLevel": "Information",
      "FileSizeLimitBytes": 5120,
      "MaxRollingFiles": 100
    },
    "Database": {
      "MinimumLevel": "Information"
    },
    "Monitor": {
      "GlobalEnabled": true, 
      "IncludeOfMethods": [],
      "ExcludeOfMethods": [] 
    }
  }
}